<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.iamco.model">
    <class name="Offre" table="offres">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <property name="titre" column="titre"/>
        <property name="description" column="description" type="text"/>
        <property name="typeContrat" column="type_contrat"/>
        <property name="salaire" column="salaire"/>
        <property name="localisation" column="localisation"/>
        <property name="active" column="active"/>
        <property name="datePublication" column="date_publication" type="date"/>

        <many-to-one name="recruteur" column="recruteur_id" class="Recruteur" not-null="true"/>

        <!-- OneToMany to OffreSkill -->
        <bag name="skills" cascade="all-delete-orphan" inverse="true">
            <key column="offre_id"/>
            <one-to-many class="OffreSkill"/>
        </bag>
    </class>
</hibernate-mapping>
