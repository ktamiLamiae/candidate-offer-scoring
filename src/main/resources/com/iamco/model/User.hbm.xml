<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.iamco.model">
    <class name="User" table="users">
        
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <property name="email" column="email" not-null="true" unique="true"/>
        <property name="password" column="password" not-null="true"/>
        <property name="nom" column="nom"/>
        <property name="prenom" column="prenom"/>
        <property name="telephone" column="telephone"/>
        <property name="createdAt" column="created_at" type="timestamp"/>

        <joined-subclass name="Candidat" table="candidats">
            <key column="id"/>
            <many-to-one name="profil" column="profil_id" class="Profil" cascade="all" unique="true"/>
            
            <bag name="candidatures" cascade="all" inverse="true">
                <key column="candidat_id"/>
                <one-to-many class="Candidature"/>
            </bag>
        </joined-subclass>

        <joined-subclass name="Recruteur" table="recruteurs">
            <key column="id"/>
            <property name="entreprise" column="entreprise"/>
            <property name="posteActuel" column="poste_actuel"/>
            
            <bag name="offres" cascade="all" inverse="true">
                <key column="recruteur_id"/>
                <one-to-many class="Offre"/>
            </bag>
        </joined-subclass>

    </class>
</hibernate-mapping>
