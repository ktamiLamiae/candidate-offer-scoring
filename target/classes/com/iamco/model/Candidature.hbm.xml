<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.iamco.model">
    <class name="Candidature" table="candidatures">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <many-to-one name="candidat" column="candidat_id" class="Candidat" not-null="true"/>
        <many-to-one name="offre" column="offre_id" class="Offre" not-null="true"/>
        
        <property name="dateCandidature" column="date_candidature" type="timestamp"/>
        <property name="statut" column="statut"/>
        <property name="motivation" column="motivation" type="text"/>

        <many-to-one name="matchResult" column="match_result_id" class="MatchResult" cascade="all" unique="true"/>
    </class>
</hibernate-mapping>
