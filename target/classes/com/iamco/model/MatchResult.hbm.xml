<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.iamco.model">
    <class name="MatchResult" table="match_results">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <property name="score" column="score"/>
        <property name="explication" column="explication" type="text"/>
        <property name="skillsMatches" column="skills_matches" type="text"/>
        <property name="skillsManquants" column="skills_manquants" type="text"/>
        <property name="dateCalcul" column="date_calcul" type="timestamp"/>
        
        <one-to-one name="candidature" class="Candidature" property-ref="matchResult"/>
    </class>
</hibernate-mapping>
