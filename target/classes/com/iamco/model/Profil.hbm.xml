<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.iamco.model">
    <class name="Profil" table="profils">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>

        <property name="titre" column="titre"/>
        <property name="description" column="description" type="text"/>
        <property name="cvPath" column="cv_path"/>
        <property name="experienceAnnees" column="experience_annees"/>
        <property name="updatedAt" column="updated_at" type="timestamp"/>

        <!-- OneToMany to ProfilSkill (intermediate entity) -->
        <bag name="skills" cascade="all-delete-orphan" inverse="true">
            <key column="profil_id"/>
            <one-to-many class="ProfilSkill"/>
        </bag>
    </class>
</hibernate-mapping>
